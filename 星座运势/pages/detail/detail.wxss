/* pages/detail/detail.wxss */
.container {
  padding: 0;
  margin: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f8f8;
}

.header {
  position: relative;
  background: linear-gradient(to bottom, #f0f3ff, #fff);
  width: 100%;
  padding: 0;
  margin: 0;
  padding-top: calc(88rpx + env(safe-area-inset-top));
}

.back-btn {
  position: fixed;
  top: calc(60rpx + env(safe-area-inset-top));
  left: 30rpx;
  z-index: 100;
  padding: 16rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.12);
}

.back-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.zodiac-info {
  position: relative;
  padding: 100rpx 30rpx 40rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  gap: 40rpx;
}

.zodiac-image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  flex-shrink: 0;
}

.zodiac-detail {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  flex: 1;
  gap: 20rpx;
}

.zodiac-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.zodiac-date {
  font-size: 28rpx;
  color: #666;
}

.fortune-content {
  flex: 1;
  padding: 20rpx;
}

.fortune-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #6b8afd;
  padding-left: 20rpx;
}

.section-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.food-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.food-item {
  background: #f0f3ff;
  color: #6b8afd;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}